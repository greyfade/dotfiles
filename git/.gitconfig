[core]
	editor = `which vim`
[user]
	name = Charles Banas
	email = greyfade@gmail.com
	signingkey = A940A299
[credential]
	helper = cache
[alias]
	assume = update-index --assume-unchanged
	unassume = update-index --no-assume-unchanged
	up = !git fetch origin && git rebase origin/master
	st = status -sb
	stat = status
	lg = log --color --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --date=relative
	co = checkout
[color]
	ui = true
[push]
	default = matching
[color "diff"]
	old = red bold
	new = blue bold
	meta = yellow bold
[merge]
	tool = nvimdiff
[mergetool "nvimdiff"]
	cmd = nvim -d \"$BASE\" \"$LOCAL\" \"$REMOTE\" \"$MERGED\" -c '$wincmd c' -c '$wincmd J'
[mergetool "nvimdiff3"]
	cmd = nvim -f -d \"$LOCAL\" \"$MERGED\" \"$REMOTE\"
[fetch]
	recurseSubmodules = true
[pull]
	rebase = true
[submodule]
	recurse = true
[init]
	defaultBranch = master
